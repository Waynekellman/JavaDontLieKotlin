<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="50dp" android:layout_gravity="center"
                                   android:backgroundTint="@color/main_background">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:background="@drawable/border">

                <TextView android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:id="@+id/game_name"
                          android:text="@string/app_name"
                          android:textSize="18sp" android:paddingStart="16dp"
                          tools:ignore="RtlSymmetry"
                          android:gravity="center" android:textStyle="bold"
                          android:layout_gravity="center_vertical" android:layout_weight="1"/>

                <TextView android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:id="@+id/game_amount"
                          android:text="@string/app_name"
                          android:layout_gravity="center_vertical|end" android:paddingEnd="16dp" android:textSize="18sp"
                          tools:ignore="RtlSymmetry" android:textStyle="bold"
                          android:layout_weight="1" android:gravity="center"/>
        </LinearLayout>


</androidx.cardview.widget.CardView>